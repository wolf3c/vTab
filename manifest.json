{
    "manifest_version": 3,
    "name": "vTab",
    "description": "Vertical tab manager for your browser",
    "version": "4.0",
    "permissions": [
        "tabs",
        "storage",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "./src/background.js",
        "type": "module"
    },
    "action": {
        "default_popup": "src/popup/popup.html",
        "default_icon": {
            "16": "static/icons/icon16.png",
            "48": "static/icons/icon48.png",
            "128": "static/icons/icon128.png"
        }
    },
    "options_page": "src/options/options.html",
    "content_scripts": [
        {
            "matches": [
                "<all_urls>",
                "*://*/*"
            ],
            "match_origin_as_fallback": true,
            "match_about_blank": true,
            "js": [
                "src/content/content.js"
            ],
            "run_at": "document_end"
        }
    ],
    "icons": {
        "16": "static/icons/icon16.png",
        "48": "static/icons/icon48.png",
        "128": "static/icons/icon128.png"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "static/default_favicon.png",
                "src/archived_manager/archived_manager.html",
                "src/archived_manager/archived_manager.js",
                "src/archived_manager/ArchivedManager.svelte"
            ],
            "matches": [
                "<all_urls>",
                "*://*/*"
            ]
        }
    ],
    "isReleased": true
}